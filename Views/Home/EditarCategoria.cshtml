@model Categoria

<div class="container mt-4">
    <h3>Editar Categoria</h3>

    <form asp-action="EditCategoria" method="post">
        <div class="mb-3">
            <label asp-for="CategoriaId" class="form-label">ID (não editável)</label>
            <input asp-for="CategoriaId" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        <a asp-action="ListarCategoria" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
